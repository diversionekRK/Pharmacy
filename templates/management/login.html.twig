        <form class="form-horizontal" role="form" method="POST" action="{{ path('login') }}">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <h5 class="text-info mt-5 text-center">Zaloguj się aby uzyskać dostęp do funkcji związanych z
                        zarządzaniem</h5>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group has-danger">
                        <label class="sr-only" for="username">E-Mail Address</label>
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user"></i></div>
                            <input type="text" name="_username" class="form-control" id="username"
                                   placeholder="Twój login" value="{{ last_username }}" autofocus>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="sr-only" for="password">Password</label>
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                            <input type="password" name="_password" class="form-control" id="password"
                                   placeholder="Twoje hasło">
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                        <!-- Put password error message here -->    
                        </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="offset-md-3 col-md-3">
                    <div class="form-control-feedback">
                        <span class="text-danger align-middle">
							{% if error %}
                                {# <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
                                <i class="fa fa-close"></i>{{ error.message | replace({"Bad credentials." : "Nieprawidłowy login lub hasło"}) }}
                            {% endif %}
                        </span>
                    </div>
                </div>
            </div>
            <div class="row" style="padding-top: 1rem">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-success"><i class="fa fa-sign-in"></i> Zaloguj</button>
                </div>
            </div>
        </form>

    {% endblock %}
	
